<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.user.lab72.MainActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="剩餘的錢:100000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/money"
            android:textSize="18sp" />

        <TextView
            android:text="請選擇要賭注的動物"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="104dp">

            <ImageButton
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/dino"
                android:id="@+id/imageButton4" />

            <ImageButton
                android:layout_width="72dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/panda"
                android:id="@+id/imageButton3" />

            <ImageButton
                android:layout_width="85dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/elephant"
                android:id="@+id/imageButton2" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/horse"
                android:id="@+id/imageButton"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:text="恐龍"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/din"
                android:layout_weight="1" />

            <Button
                android:text="熊貓"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pan"
                android:layout_weight="1" />

            <Button
                android:text="大象"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ele"
                android:layout_weight="1" />

            <Button
                android:text="小馬"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lit"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="投注之金額"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:layout_weight="1" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/dollar2"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="恐龍"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dino" />

            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/dino_seekBar"
                android:layout_gravity="center"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="熊貓"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/panda"
                android:textSize="15sp" />

            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/panda_seekBar"
                android:layout_weight="1"
                android:layout_gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="大象"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/eleph" />

            <SeekBar
                android:id="@+id/eleph_seekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="28dp">

            <TextView
                android:text="小馬"
                android:textSize="15sp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/horse" />

            <SeekBar
                android:id="@+id/horse_seekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:text="比賽開始"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/gamble"
                android:onClick="start"
                android:layout_weight="1" />

        </LinearLayout>

        <Button
            android:text="回首頁"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/next1" />

    </LinearLayout>

</LinearLayout>
